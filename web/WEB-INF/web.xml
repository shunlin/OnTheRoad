<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>On The Road</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>On The RoadData Source</description>
        <res-ref-name>jdbc/OnTheRoad</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <description></description>
        <display-name>User</display-name>
        <servlet-name>User</servlet-name>
        <servlet-class>neu.cs5200.otr.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>Register</display-name>
        <servlet-name>Register</servlet-name>
        <servlet-class>neu.cs5200.otr.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>Note</display-name>
        <servlet-name>Note</servlet-name>
        <servlet-class>neu.cs5200.otr.servlet.NoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Note</servlet-name>
        <url-pattern>/note.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>Comment</display-name>
        <servlet-name>Comment</servlet-name>
        <servlet-class>neu.cs5200.otr.servlet.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/comment.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>Location</display-name>
        <servlet-name>Location</servlet-name>
        <servlet-class>neu.cs5200.otr.servlet.LocationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Location</servlet-name>
        <url-pattern>/location.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>EditLocation</display-name>
        <servlet-name>EditLocation</servlet-name>
        <servlet-class>neu.cs5200.otr.servlet.EditLocationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditLocation</servlet-name>
        <url-pattern>/editLocation.do</url-pattern>
    </servlet-mapping>
</web-app>